{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["tests/**/*.js"],
            "env": {
                "jest": false
            },
            "rules": {
                "testing-library/prefer-screen-queries": "off"
            }
        }
    ]
}
